.button {
  letter-spacing: 1px;
  background: none;
  color: white;
  position: relative;
  outline: none;
  border: none;
  height: 50px;
  width: 190px;
  font-size: 14px;
  z-index: 2;
  transition: .01s .23s ease-out all;
  overflow: hidden;
  &:before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 55%;
    background: #2bbc891f;
    z-index: -1;
    transition: .3s ease-in all;
  }
  &:after {
    content: '';
    position: absolute;
    left: -5%;
    top: 5%;
    height: 90%;
    width: 5%;
    background: #2bbc8a;
    z-index: -1;
    transition: .4s .02s ease-in all;
  }
  &:hover {
    cursor: pointer;
    color: #fff;
    border-radius: 60px;
    &:before {
      left: 100%;
      width: 25%;
    }
    &:after {
      border-radius: 60px;
      left: 100%;
      width: 70%;
    }
  }
  &:active {
    color: #2bbc8a;
    box-shadow: 0px 0px 0px 0px;
  }
}
